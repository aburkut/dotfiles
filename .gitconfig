[user]
	name = Anton Serdyuk
	email = anton.serdyuk@gmail.com
[alias]
        st = status
        cm = commit
        br = branch
        co = checkout
        df = diff
        lg = log -p
	graph = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
	graph-iso = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ai)%C(reset) %C(white)%s%C(reset) %C(bold white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit
[core]
	editor = vim
        excludesfile = ~/.gitignore_global
[color]
	ui = true
[color "status"]
	added = green bold
	changed = red bold
	untracked = red bold
[color "diff"]
	old = red bold
	new = green bold
